<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin-Bloggify</title>
    <link rel="stylesheet" href="Admin.css">
</head>
<body>
     <header>
        <nav class="navbar">
            <div class="logo">
                <h1>Bloggify</h1>
            </div>
            <section>
                <form class="fo" action="">
                    <input type="text" name="" placeholder="Search Blog">
                    <input type="submit" value="Search" class="btn">
                </form>
            </section>
            <div class="btns">
             <div class="btn">
                <a href="/Addblog">Add New Blog</a>
            </div>
            <div class="btn">
                <a href="/Signup">Add Account</a>
            </div>
            <div class="btn">
                <a href="/logout">logout</a>
            </div>
            </div>
           
        </nav>
    </header>
    <main>
        <% blog.forEach((us)=>{ %>
            <div class="blog">
                <img src="/<%= us.ImageName %>" alt="">
                <h1>
                    <%= us.Title %>
                </h1>
                <div>
                    <h2>Date</h2>
                    <a href="/detail/<%= us._id %>">Read</a>
                </div>
            </div>
            <% }) %>

    </main>

</body>
</html>